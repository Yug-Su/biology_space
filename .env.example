# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# OpenRouter API (https://openrouter.ai/)
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Groq API (https://console.groq.com/)
GROQ_API_KEY=your-groq-api-key
GROQ_BASE_URL=https://api.groq.com/openai/v1

# OpenAI API (for embeddings only - https://platform.openai.com/)
# Note: OpenRouter doesn't support embeddings, so we use OpenAI directly
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1

# AI Model Configuration
# Options OpenRouter: gpt-4-turbo, gpt-3.5-turbo, claude-3-sonnet
# Options Groq: llama-3.1-70b-versatile, mixtral-8x7b-32768, gemma2-9b-it
PRIMARY_AI_MODEL=gpt-4-turbo
FALLBACK_AI_MODEL=llama-3.1-70b-versatile
EMBEDDING_MODEL=text-embedding-3-small

# Cost Optimization
MAX_TOKENS_SUMMARY=500
MAX_TOKENS_GENERATION=2000
TEMPERATURE=0.7
